<?xml version="1.0" encoding="utf-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>app</display-name>
<!--foundation-configuration-START-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:/app/spring/context-*.xml</param-value>
    </context-param>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
	<!-- Xss 필터링 -->
	<filter>
		<filter-name>xssFilter</filter-name>
		<filter-class>com.sds.acube.app.common.filter.XssFilter</filter-class>
		<init-param>
			<param-name>xss-page</param-name>
			<param-value>/app/jsp/error/ErrorXss.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>xssFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<!-- IE 필터링 -->
	<filter>
		<filter-name>IECompatibilityFilter</filter-name>
		<filter-class>com.sds.acube.app.common.filter.IECompatibilityFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>IECompatibilityFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>com.sds.acube.app.common.servlet.AppDispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:/app/servlet/*-servlet.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Resource Servlet</servlet-name>
        <servlet-class>org.springframework.js.resource.ResourceServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Resource Servlet</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
	<!-- Cross Site Scripting Servlets -->
	<servlet>
		<servlet-name>XssServlet</servlet-name>
		<servlet-class>com.sds.acube.app.common.servlet.XssServlet</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>XssServlet</servlet-name>
		<url-pattern>/scripting.initialize</url-pattern>
	</servlet-mapping>
	<!-- Memory Synchronizing Servlets -->
	<servlet>
		<servlet-name>SyncServlet</servlet-name>
		<servlet-class>com.sds.acube.app.common.servlet.SyncServlet</servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>SyncServlet</servlet-name>
		<url-pattern>/memory.update</url-pattern>
	</servlet-mapping>

	<!-- Attach file handling servlet (start) -->
	<servlet>
		<servlet-name>dmmhtimg</servlet-name>
		<servlet-class>com.sds.acube.dm.servlet.DmMhtImg</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>dmfile</servlet-name>
		<servlet-class>com.sds.acube.dm.servlet.DmFile</servlet-class>
		<init-param>
			<param-name>TmpDir</param-name>
			<param-value>C:/ats-1.6.1/temp</param-value>
		</init-param>
		<init-param>
			<param-name>USETMPDIR</param-name>
			<param-value>N</param-value>
		</init-param>
		<init-param>
			<param-name>LOG</param-name>
			<param-value>Y</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>dmfileupload</servlet-name>
		<servlet-class>com.sds.acube.dm.servlet.DmFileUpload</servlet-class>
		<init-param>
			<param-name>TmpDir</param-name>
			<param-value>C:/ats-1.6.1/temp</param-value>
		</init-param>
		<init-param>
			<param-name>USETMPDIR</param-name>
			<param-value>N</param-value>
		</init-param>
		<init-param>
			<param-name>LOG</param-name>
			<param-value>Y</param-value>
		</init-param>
	</servlet>
	
	<servlet>
		<description></description>
		<display-name>AjaxUploadServlet</display-name>
		<servlet-name>AjaxUploadServlet</servlet-name>
		<servlet-class>com.sds.acube.app.common.servlet.AjaxUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AjaxUploadServlet</servlet-name>
		<url-pattern>/servlet/upload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AjaxUploadServlet</servlet-name>
		<url-pattern>/servlet/upload/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>dmmhtimg</servlet-name>
		<url-pattern>/app/servlet/dmmhtimg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>dmfile</servlet-name>
		<url-pattern>/app/servlet/tmp/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>dmfile</servlet-name>
		<url-pattern>/app/servlet/dmfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>dmfileupload</servlet-name>
		<url-pattern>/app/servlet/dmfileupload</url-pattern>
	</servlet-mapping>
	<!-- Attach file handling servlet (end) -->
    
	<!--cxf-jaxws-configuration-START-->
    <servlet>
        <servlet-name>CXF-JAXWS-Servlet</servlet-name>
        <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CXF-JAXWS-Servlet</servlet-name>
        <url-pattern>/app/cxf-jaxws/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CXF-JAXWS-Servlet</servlet-name>
        <url-pattern>/app/esb/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CXF-JAXWS-Servlet</servlet-name>
        <url-pattern>/app/legacy/*</url-pattern>
    </servlet-mapping>
    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>xsd</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
	<!--cxf-jaxws-configuration-END-->

    <mime-mapping>
        <extension>mht</extension>
        <mime-type>message/rfc822</mime-type>
    </mime-mapping>
    <welcome-file-list>
        <welcome-file>/app/index.do</welcome-file>
        <welcome-file>/app/index.html</welcome-file>
    </welcome-file-list>
<!--foundation-configuration-END-->
<!--Add new configuration here-->
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <resource-ref>
		<description>oracle Connection</description>
		<res-ref-name>iam60DataSource</res-ref-name>
		<res-type>oracle.jdbc.pool.OracleDataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
    <resource-ref>
		<description>oracle Connection</description>
		<res-ref-name>iamDataSource</res-ref-name>
		<res-type>oracle.jdbc.pool.OracleDataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>appDataSource</res-ref-name>
		<res-type>oracle.jdbc.pool.OracleDataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<session-config>
		<session-timeout>6000</session-timeout>
	</session-config>	
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/app/jsp/error/Error.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/app/jsp/error/Error.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/app/jsp/error/ErrorNoPage.jsp</location>
	</error-page>
</web-app>
